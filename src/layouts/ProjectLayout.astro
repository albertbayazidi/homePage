---
import { fade } from 'astro:transitions'
import { ViewTransitions } from 'astro:transitions'
import BaseHead from '../components/BaseHead.astro'
import Navbar from '../components/Navbar.astro'
import Sosials from '../components/sosials.astro'

const { ...head } = Astro.props
---

<!doctype html>
<html lang="en" class="dark overflow-x-hidden">
  <head>
    <BaseHead {...head} />
    <ViewTransitions />
  </head>
  <body class="bg-main text-main min-h-screen font-sans w-full bg-dot">
    <Navbar />
    <main
      class="grow max-w-3xl mx-auto sm:pt-16 pt-16 pb-16 px-6 relative"
      transition:animate={fade({ duration: '0.4s' })}
    >
    <article class="prose">
            <slot  />
    </article>
    <Sosials  />
    </main>
  </body>
</html>
