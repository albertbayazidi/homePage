---
import BaseLayout from "../../layouts/BaseLayout.astro";
import { getCollection } from "astro:content";

const projects = await getCollection("Projects");
---

<BaseLayout title="Projects" description="List of projects that I am proud of">
  <h1 class="mb-10 text-title">Projects</h1>
  <div class="mb-16 sm:mb-24">
    {
      projects.length > 0 && (
        <div>
          {projects.map((project: any) => (
            <div class="mb-8">
              <h2 class="flex items-center relative h-20">
                <a
                  class="flex-grow my-2 text-2xl color-transparent hover:(dark:opacity-100 text-#BBBBB cursor-pointer) text-stroke-1.5 text-stroke-hex-aaa op35 sm:text-3xl hover:text-#BBBBBB font-bold tracking-tight no-underline transition-colors duration-300"
                  href={`/Projects/${project.slug}/`}
                >
                  {project.data.title}
                </a>
                <span class="ml-2" set:html={project.data.svg} />
              </h2>
            </div>
          ))}
        </div>
      )
    }
  </div>
</BaseLayout>
